<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="/css/normalize.css" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
            crossorigin="anonymous"
        />
        <link rel="stylesheet" href="/css/main.css" />
        <title>PastePhoto</title>
    </head>

    <body id="app">

        <!-- LOading -->

        <div id="loading" class="load">
        <span class="loader"><span class="loader-inner"></span></span>
        </div>

        <!-- END  -->


        <div id="body" style="display: none">

            
        <!-- TAB TO CHOOSE PASSWORD AND SELECT PERIOD OF VALIDITY -->
        <div v-if="SelectDateAndPass" id="cover">
            <div class="wrapper fadeInDown">
                <div id="formContent">
                    <!-- Tabs Titles -->
                    <h2 class="active">Upload photo</h2>

                    <!-- Login Form -->
                    <form>
                        <input
                            maxlength="40"
                            v-model="Title"
                            id="login"
                            type="text"
                            class="fadeIn second"
                            placeholder="Title (optional)"
                        />
                        <div class="textt">Expiration of file:</div>
                        <select v-model="DaysToExpire">
                            <option value="0">1 day</option>
                            <option value="1">7 days</option>
                            <option value="2">15 days</option>
                            <option value="3">30 days</option>
                        </select>
                        <input
                            v-model="PasswordOfFile"
                            type="password"
                            class="fadeIn third"
                            placeholder="Password (optional)"
                        />
                        <textarea
                            maxlength="90"
                            v-model="Description"
                            placeholder="Description (optional)"
                            class="fadeIn second"
                        ></textarea>
                        <input v-on:click="FinishUpload" type="submit" class="fadeIn fourth" value="Upload" />
                        <input v-on:click="TurnOffUpload" type="submit" class="fadeIn fourth" value="Cancel" />
                    </form>
                </div>
            </div>
        </div>

        <!-- END  -->
        <div style="min-height: 91.2vh">
            <div class="logo">PastePhoto - Easy Image Uploads</div>
            <div class="MediumLogoText">Free image hosting and sharing service</div>

            <div class="upload">
                <div class="text">(Only files of the format JPEG, PNG, GIF, APNG and TIFF up to 10 MB)</div>
                <div
                    @dragover="dragover"
                    @dragleave="dragleave"
                    v-cloak
                    @drop.prevent="dropfile"
                    @dragover.prevent
                    class="box"
                >
                    <img src="/images/upload.svg" />
                    <div class="text">Drag and drop files here</div>
                    <input @change="FileUploaded" id="fileUpload" type="file" hidden />
                </div>
                <button type="button" v-on:click="uploadFile" class="btn btn-success button">Or Select Image</button>
            </div>
        </div>
        <footer>
            <div class="leftSide">
                <a href="/">PastePhoto</a>
            </div>
            <div class="rightSide">
                <a href="/termspolicy">Terms & policy</a>
            </div>
        </footer>
        </div>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"
        ></script>
        <script src="/js/vue.global.prod.js"></script>
        <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script defer src="/js/main.js"></script>
    </body>
</html>
